<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp">

    <View
        android:id="@+id/color_view"
        android:layout_width="100dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="@id/range_bar_red"
        app:layout_constraintEnd_toEndOf="@id/range_bar_red" />

    <com.ionshield.planner.view.RangeBar
        android:id="@+id/range_bar_red"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/color_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="15dp"
        app:title="@string/color_value_red" />

    <com.ionshield.planner.view.RangeBar
        android:id="@+id/range_bar_green"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/range_bar_red"
        app:layout_constraintStart_toStartOf="@id/range_bar_red"
        app:layout_constraintEnd_toEndOf="@id/range_bar_red"
        android:layout_marginTop="5dp"
        app:title="@string/color_value_green" />

    <com.ionshield.planner.view.RangeBar
        android:id="@+id/range_bar_blue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/range_bar_green"
        app:layout_constraintStart_toStartOf="@id/range_bar_red"
        app:layout_constraintEnd_toEndOf="@id/range_bar_red"
        android:layout_marginTop="5dp"
        app:title="@string/color_value_blue" />

</androidx.constraintlayout.widget.ConstraintLayout>