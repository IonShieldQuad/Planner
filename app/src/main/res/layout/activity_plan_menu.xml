<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.PlanMenuActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:textSize="36sp"
            android:text="@string/plan_title" />
        <TextView
            android:id="@+id/current_plan_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:textSize="36sp"
            android:text="" />

        <GridLayout
            android:layout_weight="1"
            android:layout_height="0dp"
            android:layout_width="match_parent"
            android:columnCount="2"
            android:rowCount="2">

            <Button
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:text="@string/notes_button_label"
                android:textSize="20sp"
                />
            <Button
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:text="@string/events_button_label"
                android:textSize="20sp"
                />
            <Button
                android:layout_rowWeight="1"
                android:layout_columnWeight="0.5"
                android:text="@string/constraints_button_label"
                android:textSize="20sp"
                />
            <Button
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:text="@string/calendar_button_label"
                android:textSize="20sp"
                />


        </GridLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>